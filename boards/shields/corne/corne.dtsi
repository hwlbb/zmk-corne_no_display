#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,physical-layout = &default_layout;
    };

    default_layout: keymap_layout_0 {
        compatible = "zmk,physical-layout";
        display-name = "Default";

        keys  //                     w   h    x    y     rot   rx   ry
            = <&key_physical_attrs 100 100    0   50       0    0    0>
            , <&key_physical_attrs 100 100  100   38       0    0    0>
            , <&key_physical_attrs 100 100  200   25       0    0    0>
            , <&key_physical_attrs 100 100  300   13       0    0    0>
            , <&key_physical_attrs 100 100  400   25       0    0    0>
            , <&key_physical_attrs 100 100  500   38       0    0    0>
            , <&key_physical_attrs 100 100  800   38       0    0    0>
            , <&key_physical_attrs 100 100  900   25       0    0    0>
            , <&key_physical_attrs 100 100 1000   13       0    0    0>
            , <&key_physical_attrs 100 100 1100   25       0    0    0>
            , <&key_physical_attrs 100 100 1200   38       0    0    0>
            , <&key_physical_attrs 100 100 1300   50       0    0    0>
            , <&key_physical_attrs 100 100    0  150       0    0    0>
            , <&key_physical_attrs 100 100  100  138       0    0    0>
            , <&key_physical_attrs 100 100  200  125       0    0    0>
            , <&key_physical_attrs 100 100  300  113       0    0    0>
            , <&key_physical_attrs 100 100  400  125       0    0    0>
            , <&key_physical_attrs 100 100  500  138       0    0    0>
            , <&key_physical_attrs 100 100  800  138       0    0    0>
            , <&key_physical_attrs 100 100  900  125       0    0    0>
            , <&key_physical_attrs 100 100 1000  113       0    0    0>
            , <&key_physical_attrs 100 100 1100  125       0    0    0>
            , <&key_physical_attrs 100 100 1200  138       0    0    0>
            , <&key_physical_attrs 100 100 1300  150       0    0    0>
            , <&key_physical_attrs 100 100    0  250       0    0    0>
            , <&key_physical_attrs 100 100  100  238       0    0    0>
            , <&key_physical_attrs 100 100  200  225       0    0    0>
            , <&key_physical_attrs 100 100  300  213       0    0    0>
            , <&key_physical_attrs 100 100  400  225       0    0    0>
            , <&key_physical_attrs 100 100  500  238       0    0    0>
            , <&key_physical_attrs 100 100  800  238       0    0    0>
            , <&key_physical_attrs 100 100  900  225       0    0    0>
            , <&key_physical_attrs 100 100 1000  213       0    0    0>
            , <&key_physical_attrs 100 100 1100  225       0    0    0>
            , <&key_physical_attrs 100 100 1200  238       0    0    0>
            , <&key_physical_attrs 100 100 1300  250       0    0    0>
            , <&key_physical_attrs 100 150  350  325      30  400  750>
            , <&key_physical_attrs 100 150  450  350      15  400  750>
            , <&key_physical_attrs 100 150  550  375       0  400  750>
            , <&key_physical_attrs 100 150  750  375       0  900  750>
            , <&key_physical_attrs 100 150  850  350     -15  900  750>
            , <&key_physical_attrs 100 150  950  325     -30  900  750>
            ;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <4>;
// | SW1  | SW2  | SW3  | SW4  | SW5  | SW6  |   | SW6  | SW5  | SW4  | SW3  | SW2  | SW1  |
// | SW7  | SW8  | SW9  | SW10 | SW11 | SW12 |   | SW12 | SW11 | SW10 | SW9  | SW8  | SW7  |
// | SW13 | SW14 | SW15 | SW16 | SW17 | SW18 |   | SW18 | SW17 | SW16 | SW15 | SW14 | SW13 |
//                | SW19 | SW20 | SW21 |   | SW21 | SW20 | SW19 |
        map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)  RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)  RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11)
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)  RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11)
                        RC(3,3) RC(3,4) RC(3,5)  RC(3,6) RC(3,7) RC(3,8)
        >;
    };

    five_column_transform: keymap_transform_1 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <4>;
// | SW2  | SW3  | SW4  | SW5  | SW6  |   | SW6  | SW5  | SW4  | SW3  | SW2  |
// | SW8  | SW9  | SW10 | SW11 | SW12 |   | SW12 | SW11 | SW10 | SW9  | SW8  |
// | SW14 | SW15 | SW16 | SW17 | SW18 |   | SW18 | SW17 | SW16 | SW15 | SW14 |
//            | SW19 | SW20 | SW21 |   | SW21 | SW20 | SW19 |
        map = <
RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)  RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10)
RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)  RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10)
RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)  RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10)
                RC(3,3) RC(3,4) RC(3,5)  RC(3,6) RC(3,7) RC(3,8)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
        wakeup-source;

        row-gpios
            = <&pro_micro 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;

    };
};
